rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated HR users to upload hiring post images
    match /hiring-posts/{hrId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == hrId;
      allow delete: if request.auth.uid == hrId;
    }
    
    // Allow authenticated users to upload and manage profile photos
    match /profile-photos/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
      allow delete: if request.auth.uid == userId;
    }
    
    // Public read access for all files (images, photos, etc.)
    match /{allPaths=**} {
      allow read: if true;
    }
  }
}
